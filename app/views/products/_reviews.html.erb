<h3>Reviews for <%= @product.name %>:</h3>
<div id="review-list">
	<% @product.reviews.each do |review| %>
			<div class="review">
				<p style="color:white"><%= review.comment %></p>
				<br>
				<div class="poster">
					<% if review.user != nil %>
					<em> by <%= review.user.email %></em>
					Added on: <%= review.created_at %>
					<% end %>
					<%= link_to "Delete this review", product_review_path(@product, review), :confirm => "Are you sure you want to delete this review?", :method => :delete %>
				</div>
			</div>
	<% end %>
</div>	



